{
  "routes_allowed": [
    {
      "method": "GET",
      "pattern": "^/containers/json$",
      "check_filter": [
        {
          "filter_key": "name",
          "allowed_values": ["molecule"]
        }
      ]
    },
    {
      "method": "POST",
      "pattern": "^/containers/create$",
      "check_json": [
        {
          "key": ["HostConfig", "Binds"],
          "allowed_values": ["^/home/klemens","^/var/run/docker.sock"]
        },
        {
          "key": ["Tty"],
          "allowed_values": [true]
        }
      ],
      "check_param": [
        {
          "param": "name",
          "allowed_values": ["molecule"]
        }
      ]
    },
    {
      "method": "POST",
      "pattern": "^/containers/([a-f0-9]{1,64})/(attach|wait|start|resize)$"
    },
    {
      "method": "*",
      "pattern": "^/containers/(.*molecule.*)/(json|start|stop|exec)$"
    },
    {
      "method": "*",
      "pattern": "^/exec/([a-f0-9]{1,64})/(start|json|resize)$"
    }
  ]
}
